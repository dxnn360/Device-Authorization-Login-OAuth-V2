extends layout.pug

block content
  style(type="text/css").
    .btn {
      border-radius: 0px;
    }

  body(style="background-image: url('bg-login1.png'); background-size: cover; background-position: center center; overflow: hidden;")
    <div class="container main" style="display: flex; justify-content: center; padding-top: auto; margin-top: 4rem;">
        <h1 class="text-center" style="font-family: 'Montserrat', sans-serif; font-weight: bold;">Selamat Datang</h1>
    </div>
    <div class="container main" style="display: flex; justify-content: center; padding-top: auto;">
        <h2 class="text-center" style="font-family: 'Montserrat', sans-serif; font-weight: bold;">Simpan, Pantau, dan Kelola Data Keuanganmu Hanya Di <span style="color:'blue';">KasKU</span></h3>
    </div>
    <div class="container main mt-3" style="display: flex; justify-content: center; padding-top: auto;">
        <p class="mb-4 text-center" style="font-family: 'Montserrat', sans-serif; font-weight: medium;">Silahkan Login untuk Melanjutkan</p>
    </div>
	
    .container.d-flex.justify-content-center.mt-1
      button.btn.btn-dark.btn-lg.px-5(onclick='authorizeApplication(event)')(style="font-family: 'Montserrat', sans-serif; font-weight: medium;") Login
