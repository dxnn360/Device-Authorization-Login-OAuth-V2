extends layout.pug

block content
  .container
    h3.ms-2 Dashboard
    .row
      .col-6.mx-1.my-3.bg-primary.bg-success.bg-gradient(style="height: 300px; font-weight: medium;")
        h2.mt-5.ms-3 SELAMAT DATANG
        h2.my-1.fst-italic.ms-3 #{userInfo.displayName.toUpperCase()}
        .d-grid.gap-2
          button.btn.btn-dark.my-5.mx-3(onclick="redirectToHaloPug()") CEK PROFIL! 
      .col-5.mx-2.my-2.bg-light
        .col-12.mb-4.bg-secondary(style="height: 130px; width: 120%; margin-top: 10px; margin-bottom: 18px!important;")
          h2.px-3.pt-3.text-center TABUNGAN ANDA
          h2.my-2.mx-2.text-center.fw-bold RP2.400.000
        .col-12.mb-2.bg-dark(style="height: 150px; width: 120%;")
          h2.text-white.px-2.py-3.text-center SETOR TUNAI?
          .d-grid.gap-2
            button.btn.btn-outline-light.my-2.mx-5(type="button") GASS!

    .container
      h3.ms-2.mt-3 Aktivitas Anda
      ol.list-group.list-group-numbered.px-1.my-4
        li.list-group-item.d-flex.justify-content-between.align-items-start
          div.ms-2.me-auto
            div.fw-bold Senin, 18 September 2023
            Cras Setor Kas
          span.btn-primary.px-3.mt-2.rounded-pill Rp25.000
        li.list-group-item.d-flex.justify-content-between.align-items-start
          div.ms-2.me-auto
            div.fw-bold Kamis, 14 September 2023
            Cras Setor Kas
          span.btn-primary.px-3.mt-2.rounded-pill Rp25.000
        li.list-group-item.d-flex.justify-content-between.align-items-start
          div.ms-2.me-auto
            div.fw-bold Rabu, 13 September 2023
            Cras Tarik Kas
          span.btn-primary.px-3.mt-2.rounded-pill Rp120.000

    .row
      .col-md-12.d-flex.justify-content-center.my-5
        a(href="/logout" class="btn btn-dark" style="border-radius:0px;") Log Out
